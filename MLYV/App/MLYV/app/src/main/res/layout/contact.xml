<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointOfInterestPhoto"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/contacto_banner"
        android:paddingTop="60dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/pointOfInterestPhoto"
        android:layout_alignParentStart="true"
        android:textAlignment="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domicilio"
            android:id="@+id/textView3"
            android:layout_marginEnd="43dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/keepReading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tacuba 5 , Cuauhtémoc, México, Ciudad de México"
            android:id="@+id/textView4"
            android:layout_above="@+id/textView5"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horarios"
            android:id="@+id/textView5"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De lunes a viernes, 09:00 - 18:00 hrs"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/textView5"
            android:layout_toEndOf="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precios"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrada Libre"
            android:id="@+id/textView8"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visitas guiadas | Salas de lectura | Biblioteca"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel. (55) 5623 2981 y (55) 5623 2929"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://www.palaciomineria.unam.mx"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginTop="10dp"
            android:autoLink="web"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicios"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView5"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto"
            android:id="@+id/textView13"
            android:layout_below="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir al sitio web"
            android:id="@+id/textView14"
            android:layout_below="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar Informacion"
            android:id="@+id/keepReading"
            android:height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:autoLink="email"/>
    </RelativeLayout>

</RelativeLayout>